<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/volvoCar"
            android:layout_width="match_parent"
            android:layout_height="103dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/volvo_car"
            tools:layout_editor_absoluteX="6dp"
            tools:layout_editor_absoluteY="30dp" />

        <TextView
            android:id="@+id/titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#969292"
            android:text="LOTE DE CARROS"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/txtMarca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="15dp"
            android:background="@color/white"
            android:ems="10"
            android:gravity="center"
            android:hint="marca"
            android:inputType="textPersonName"
            android:rotationX="0"
            android:textColorHighlight="#f4f720"
             />

        <EditText
            android:id="@+id/txtColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginVertical="15dp"
            android:background="@color/white"
            android:ems="10"
            android:gravity="center"
            android:hint="color"
            android:inputType="textPersonName"
            android:singleLine="true"
            android:textColorHighlight="#f4f720" />

        <EditText
            android:id="@+id/txtPrecio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:background="@color/white"
            android:ems="10"
            android:gravity="center"
            android:hint="precio"
            android:inputType="none|textPersonName|text"
            android:textColorHighlight="#f4f720" />

        <Button
            android:id="@+id/buscar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"

            android:onClick="imprimirResultados"
            android:text="BUSCAR" />

        <TextView
            android:id="@+id/resultados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Resultados de bÃºsqueda"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25dp"

            android:background="#969292"/>


        <TextView
            android:id="@+id/lblMarca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="19dp"
            android:layout_marginVertical="15dp"
            android:layout_marginHorizontal="50dp"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:text="Marca: "/>

        <TextView
            android:id="@+id/lblColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="19dp"
            android:layout_marginHorizontal="50dp"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:text="Color: "/>

        <TextView
            android:id="@+id/lblPrecio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="19dp"
            android:textColor="@color/white"
            android:layout_marginVertical="15dp"
            android:layout_marginHorizontal="50dp"
            android:text="Precio: "/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>